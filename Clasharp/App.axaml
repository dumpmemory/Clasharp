<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Clasharp"
             RequestedThemeVariant="Light"
             x:Class="Clasharp.App">
    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml" />
        <StyleInclude Source="avares://AvaloniaProgressRing/Styles/ProgressRing.xaml" />
        <Style Selector="TextBlock">
            <Setter Property="FontFamily" Value="微软雅黑,文泉驿微米黑"></Setter>
        </Style>
        <StyleInclude Source="avares://Clasharp/MainStyles.axaml"></StyleInclude>
    </Application.Styles>
    <TrayIcon.Icons>
        <TrayIcons>
            <TrayIcon Icon="/Assets/clasharp.ico" ToolTipText="Clasharp" Clicked="OpenMainWindow">
                <TrayIcon.Menu>
                    <NativeMenu>
                        <NativeMenuItem Header="Open" Click="OpenMainWindow"></NativeMenuItem>
                        <NativeMenuItem Header="Exit" Click="Exit"></NativeMenuItem>
                    </NativeMenu>
                </TrayIcon.Menu>
            </TrayIcon>
        </TrayIcons>
    </TrayIcon.Icons>
</Application>